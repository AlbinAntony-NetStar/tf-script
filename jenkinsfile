pipeline {
agent any
tools {
  terraform 'terraform'
}
 stages { 
   stage ('Checkout Repo') { 
     steps { 
       cleanWs()
       sh  'git clone https://github.com/AlbinAntony-NetStar/tf-script.git'
      }
      } 

stage ('Terraform version') { 
  steps {
   sh '''
    terraform --version
   ''' 
    }
    }
stage ('Terraform init') { 
  steps {
   sh '''
   cd ECR/dev-ecr/
   terraform init
   ''' 
   }
   }
  stage ('Terraform plan') { 
  steps {
   sh '''
   cd ECR/dev-ecr/
   terraform plan -out=tfplan.out
   terraform show -json tfplan.out
   ''' 
   }
   }

        }
}